from pwn import *

context.terminal = ['tmux', 'splitw', '-h']
# context.terminal = ['terminator', '-e']

elf = context.binary = ELF("$1")

gs = '''
continue
'''
if args.GDB:
    target = gdb.debug("./$1", gdbscript=gs)
elif args.REMOTE:
    target = remote("host$0", "port")
else:
    target = process("./$1")



target.interactive()